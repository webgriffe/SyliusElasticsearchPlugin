{% for filter in filters %}
    {
        "nested": {
            "path": "attributes",
            "query": {
                "bool": {
                    "filter": [
                        {
                            "term": {
                                "attributes.code": {{ filter.code|json_encode|raw }}
                            }
                        },
                        {
                            "term": {
                                {{ ('attributes.values.' ~ localeCode ~ '.values')|json_encode|raw }}: {{ filter.value|json_encode|raw }}
                            }
                        }
                    ]
                }
            }
        }
    }{% if not loop.last %},{% endif %}
{% endfor %}
