{
    "name": "webgriffe/sylius-elasticsearch-plugin",
    "type": "sylius-plugin",
    "description": "Plugin allowing to search products in Sylius.",
    "keywords": [
        "sylius",
        "sylius-plugin",
        "elasticsearch"
    ],
    "license": "proprietary",
    "require": {
        "php": "^8.2",
        "elasticsearch/elasticsearch": "^7.17",
        "sylius/sylius": "^2.0",
        "symfony/console": "^6.4 || ^7.3",
        "symfony/lock": "^6.4 || ^7.3"
    },
    "require-dev": {
        "behat/behat": "^3.27.0",
        "dbrekelmans/bdi": "^1.4.1",
        "dmore/behat-chrome-extension": "^1.4",
        "dmore/chrome-mink-driver": "^2.10",
        "friends-of-behat/mink": "^1.11",
        "friends-of-behat/mink-browserkit-driver": "^1.6.2",
        "friends-of-behat/mink-debug-extension": "^2.1.0",
        "friends-of-behat/mink-extension": "^2.7.5",
        "friends-of-behat/page-object-extension": "^0.3.2",
        "friends-of-behat/suite-settings-extension": "^1.1",
        "friends-of-behat/symfony-extension": "^2.6.2",
        "friends-of-behat/variadic-extension": "^1.6",
        "nyholm/psr7": "^1.8.2",
        "phpstan/extension-installer": "^1.4.3",
        "phpstan/phpstan": "^1.12.32",
        "phpstan/phpstan-doctrine": "1.3.69",
        "phpstan/phpstan-strict-rules": "^1.6.2",
        "phpstan/phpstan-webmozart-assert": "^1.2.11",
        "phpunit/phpunit": "^10.5.58",
        "robertfausk/behat-panther-extension": "^1.2",
        "sylius-labs/coding-standard": "^4.5.0",
        "sylius-labs/suite-tags-extension": "^0.2",
        "sylius/sylius-rector": "^2.0",
        "sylius/test-application": "^2.0.0@alpha",
        "symfony/browser-kit": "^6.4 || ^7.3.6",
        "symfony/debug-bundle": "^6.4 || ^7.3.5",
        "symfony/dotenv": "^6.4 || ^7.3.2",
        "symfony/http-client": "^6.4 || ^7.3.6",
        "symfony/intl": "^6.4 || ^7.3.5",
        "symfony/runtime": "^6.4 || ^7.3.4",
        "symfony/web-profiler-bundle": "^6.4 || ^7.3.5",
        "symfony/webpack-encore-bundle": "^2.3",
        "vimeo/psalm": "^5.26.1"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": false,
            "php-http/discovery": false,
            "phpstan/extension-installer": true,
            "symfony/flex": false,
            "symfony/runtime": false
        }
    },
    "extra": {
        "symfony": {
            "require": "^6.4 || ^7.3"
        },
        "public-dir": "vendor/sylius/test-application/public"
    },
    "autoload": {
        "psr-4": {
            "Webgriffe\\SyliusElasticsearchPlugin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Webgriffe\\SyliusElasticsearchPlugin\\": ["tests/", "tests/TestApplication/src/"]
        }
    },
    "scripts": {
        "database-reset": [
            "vendor/bin/console doctrine:database:drop --force --if-exists",
            "vendor/bin/console doctrine:database:create",
            "vendor/bin/console doctrine:migration:migrate -n",
            "vendor/bin/console sylius:fixtures:load -n"
        ],
        "frontend-clear": [
            "cd vendor/sylius/test-application && yarn install && yarn build",
            "vendor/bin/console assets:install"
        ],
        "test-app-init": [
            "@database-reset",
            "@frontend-clear"
        ],
        "ecs": "vendor/bin/ecs check",
        "phpstan": "vendor/bin/phpstan analyse",
        "psalm": "vendor/bin/psalm",
        "phpspec": "vendor/bin/phpspec run --ansi -f progress --no-interaction",
        "unit": "vendor/bin/phpunit --colors=always",
        "behat": "vendor/bin/behat --colors --strict -vvv --no-interaction || vendor/bin/behat --colors --strict -vvv --no-interaction --rerun"
    }
}
